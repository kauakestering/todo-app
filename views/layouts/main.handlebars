<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;700&display=swap" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="style.css">

    
    
    <title>Todo app</title>

</head>
<body class="">
    <div>
        <header>
        <div>
            <h1>ToDo</h1>
            <button class="tema-button" onclick="alterarTema()">
                <img src="/public/imagens/moon-icon.png" alt=".">
            </button>
        </div>

        <form action="/criar" method="post"> 
            <input type="text" id="descricao" placeholder="Criar uma nova tarefa" name="descricao"> 
            <button type="submit">Criar</button>
        </form>

    </header>
    </div>

    {{{body}}}


<style>
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Josefin Sans', sans-serif;
}

:root{
    --bg-header-mobile: url(../imagens/bg-header-mobile-light.png);
    --bg-header-desktop: url(../imagens/bg-header-desktop-light.png);
    --input-box-shadow: rgba(194, 195, 214, 0.50);
    --input-color: #494C6B;
    --input-bg:#fff;
    --placeholder-color:#9495a5;
    --button-color: #494C6B;
    --button-color-houver:#39384b;
    --bg-body: #fafafa;
    --bg-tarefas: #fff;
    --box-shadow: 0px 35px 50px -15px rgba(194, 195, 214, 0.50);
    --border-color:#E3E4F1;
    --text-color:#494c6b;
    --todo-complete-color:#d1d2da;
    --info-text-color:#9495a5;
    --info-button-houver:#494c6b;
    --info-button-active: #3A7CFD;
}

body.dark{
    --bg-header-mobile: url(../imagens/bg-header-mobile-dark.png);
    --bg-header-desktop: url(../imagens/bg-header-desktop-dark.png);
    --input-box-shadow: rgba(0, 0, 0, 0.50);
    --input-color: #c8cbe7;
    --input-bg:#252730;
    --placeholder-color:#767992;
    --button-color:#252730;
    --button-color-houver:#5b5e7e;
    --bg-body: #171823;
    --bg-tarefas: #25273d;
    --box-shadow: 0px 35px 50px -15px rgba(0, 0, 0, 0.50);
    --border-color:#393a4b;
    --text-color:#c8cbe7;
    --todo-complete-color:#4d5067;
    --info-text-color:#5e5b7e;
    --info-button-houver:#e3e4f1;
    --info-button-active: #3A7CFD;
}

body{
   background: var(--bg-body); 
}

header{
    background-image: var(--bg-header-mobile);
    background-repeat: no-repeat;
    background-size: cover ;
    background-position: center;
    height: 12.5rem;
    padding: 3rem 1.75rem 0;
}

header > div{
    max-width: 33.75rem;
    margin-inline: auto;
}

header div div{
    display: flex;
    align-items: center;
    justify-content: space-between;

    margin-bottom: 2.5rem;
}

header button{
    background: none;
    border: none;
    cursor: pointer;
}

header div h1{
    color: #fff;
    text-transform: uppercase;
}

header form{
    display: flex;
    gap: 0.5rem;
}

header form input{
    padding: 1.12rem;
    border-radius:0.3125rem ;
    border: none;
    box-shadow: 0px 35px 50px -15px var(--input-box-shadow);
    width: 100%;
    outline: none;
    font-size: 0.75rem;
    color: var(--input-color);
    background:var(--input-bg) ;
}

header form input::placeholder{
    color: var(--placeholder-color);
}

header form button{
    padding: 0.75rem;
    border-radius: 0.3125rem;
    border:none;
    background: var(--button-color);
    color: #fff;
}

main{
    min-height: calc(100vh - 12.5rem) ;
    padding-inline: 1.75rem ;
}

.tarefas{
    background: var(--bg-tarefas);
    box-shadow: var(--box-shadow);
    border-radius: 0.3125rem;
    margin-top: -1rem;
    max-width: 33.75rem;
    margin-inline: auto;
}

.tarefas .tarefa{
    padding: 1rem 1.25rem ;
    color: var(--border-color);
}

.tarefas .tarefa + .tarefa{
    border-top: 1px solid;
}

.completa label{
    text-decoration: line-through;
    color: var(--todo-complete-color);
}

.tarefa form{
    display: flex;
    justify-content: space-between;
}

.tarefa div{
   display: flex;
   align-items: center;
   gap: 0.75rem;

    color: var(--text-color);
    font-size: 0.75rem;
}

.tarefa button{
    border: none;
    background: none;
}

.informacoes{
    border-top: 1px solid var(--border-color) ;
    padding: 1rem 1.25rem;
    display: flex;
    justify-content: space-between;
    font-size: 0.75rem;
    color: var(--info-text-color);
}

.informacoes a,
.botoes a {
    text-decoration: none;
    color: var(--info-text-color);
}

.informacoes .botoes{
    display: none;
}

.botoes{
    padding-block: 1rem;
    background: var(--bg-tarefas);
    border-radius: 0.3125rem;
    margin-top: 1rem;
    max-width: 33.75rem;
    margin-inline: auto;

    display: flex;
    justify-content: center;
    gap: 1.2rem;

    font-size: 0.875rem;
}

.botoes .active{
    color: var(--info-button-active);
}

@media(min-width: 1000px) {
    header{
        background-image: var(--bg-header-desktop);
        height: 18.75rem ;
        padding-top: 4.37rem;
    }

    header div div{
        margin-bottom: 3rem;
    }

    header form input{
        padding: 1.25rem 1.5rem;
        font-size: 1.125rem;
    }

    header form button{
        font-size: 1.125rem;
    }

    header form button:hover{
        cursor: pointer;
        background: var(--button-color-houver);
    }

    .tarefas{
        margin-top: -3rem;
    }

    .tarefas .tarefa{
        padding:1.25rem 1.5rem ;
    }


    .tarefa div{
        font-size: 1.125rem;
    }
    
    section.botoes{
        display: none;
    }

    .informacoes .botoes{
        display: flex;
        padding: 0;
        margin: 0;
        gap: 2rem;
    }

    .informacoes{
        font-size: 0.875rem;
    }

    .informacoes  a:hover{
        color: var(--info-button-houver);
    }

    .tarefa button{
        visibility: hidden;
    }

    .tarefa input:hover,
    .tarefa label:hover,
    .tarefa button:hover{
        cursor: pointer;
    }

    .tarefa:hover button{
        visibility: initial;
    }

    
}
    

</style>

<script>
function alterarTema() {
    const tema = localStorage.getItem("tema")
    const body = document.querySelector("body")
    const button = document.querySelector(".tema-button")

    if (tema) {
        if (tema === "light") {
            let novoTema
            novoTema = "dark"
            button.innerHTML = `"/public/imagens/sun-icon.png"`
            body.classList.remove("light")
            body.classList.add("dark")
        } else {
            novoTema = "light"
            button.innerHTML = `"/public/imagens/moon-icon.png"`
            body.classList.remove("dark")
            body.classList.add("light")
        }
    
        localStorage.setItem("tema", novoTema)
        return
    
    }
        localStorage.setItem("tema", "dark")
        body.classList.add("dark")

}

function verificarTema(){
    const tema = localStorage.getItem("tema")
    const body = document.querySelector("body")
    if (tema === "dark"){
        body.classList.add("dark")
        button.innerHTML = `"/public/imagens/sun-icon.png"`
    }else {
        body.classList.add("light")
        `"/public/imagens/moon-icon.png"`
    }

    }
verificarTema()
</script>




</body>
</html>